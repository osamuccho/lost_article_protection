<div class="user_nav grid-6">
 <a class="post" href="/events/new">＋</a>
</div>
         
<div class="contents row">
  <% @events.each do |event| %>
  <div class="content_post" style="background-image: url(<%= event.event_name %>);">
     <div class="more">
        <span><%= image_tag event.image, class: :card__img if event.image.attached? %></span>
        
        
      <span class="name">
        <a href="/tags/<%= event.tags %>">
        <%= event.event_name %>
        
         
      </span>

      <ul class="more_list">
          <li>
            <%= link_to '削除', "/events/#{event.id}", method: :delete %>
          </li>
        </ul>
     
      </div>
  <% end %>
 </div>
</div >
